<div class="ui small menu inverted attached">
  <div class="ui container">
    <%= link_to "Chatroom", root_path, class: "item" %>
    <a class="item">
      Messages
    </a>
    <div class="right menu">
      <div class="ui dropdown item">
        <% if logged_in? %> 
          <%= current_user.username %><i class="dropdown icon"></i>
        <% else %>
          Account<i class="dropdown icon"></i>
        <% end %>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to "Log Out", logout_path, method: :delete, class: "item" %>
          <% else %>
            <%= link_to "Log In", login_path, class: "item" %> 
          <% end %>
        </div>
      </div>
      <% if !logged_in? %>
        <div class="item">
          <%= link_to "Sign Up", login_path, class: "ui teal button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>